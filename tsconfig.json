{
  "compilerOptions": { 
    "target": "es6" ,
    "module": "commonjs" ,
    "outDir": "build" ,
    "rootDir": "src",
    "strict": true ,
    // "noImplicitAny": true,
    "moduleResolution": "node" ,
    "types": [ "node"] ,
    "esModuleInterop": true ,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["client"]
}
