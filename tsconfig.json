{
  "compilerOptions": {
    "target": "es6" ,
    "module": "commonjs" ,
    "outDir": "./dist" ,
    "rootDir": "./src" ,
    "strict": true ,
    "moduleResolution": "node" ,
    "typeRoots": ["src", "node_modules/@types"] ,
    "types": ["jest", "node"] ,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./client"]
}
